<p id="notice"><%= notice %></p>

<center><h3>Countries Detail</h3></center>
<hr class="colorgraph">
<table class="table">

  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= country.name %></td>
        <td><%= link_to 'Show', country %></td>
        <td><%= link_to 'Edit', edit_country_path(country) %></td>
        <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr class="colorgraph">
    

<br>

<%= link_to 'Add New Country', new_country_path, :class => "btn btn-info" %>
