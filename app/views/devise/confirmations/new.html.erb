<div class="row" style="margin-top:02px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">

<h2>Resend confirmation instructions</h2>
  <hr class="colorgraph">
<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    
    <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email)  , :class=>"form-control input-lg", :placeholder=>"Email (abc@example.com)"%>
  </div>
  <hr class="colorgraph">

  <div class="actions">
    <%= f.submit "Resend confirmation instructions" ,:class =>"btn btn-block btn-success"%>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
</div>