<center><h3>Job List</h3></center>
    
<hr class="colorgraph">

<table class="table">
  <thead>
  
    <tr>
      <th>Newspaper</th>
      <th>Title</th>
      <th>Organization</th>
      <th>State</th>
      <th>Idate</th>
      <th>Lastdate</th>
      <th>URL</th>
      <th>image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advertises.each do |advertise| %>
      <tr>
        <td><%= advertise.newspaper.name %></td>
        <td><%= advertise.title %></td>
        <td><%= advertise.organization.name %></td>
        <td><%= advertise.state %></td>
        <td><%= advertise.idate %></td>
        <td><%= advertise.lastdate %></td>
        <td><%= advertise.description %></td>
        <td><%= link_to "View Image", advertise.image.url %></td>
        <td><%= link_to 'Full Detail', advertise %></td>
        <% if logged_in_admin? %>
        <td><%= link_to 'Edit', edit_advertise_path(advertise) %></td>
        <td><%= link_to 'Destroy', advertise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<hr class="colorgraph">
<% if logged_in_admin? %>
<%= link_to 'New Advertise', new_advertise_path , :class => "btn btn-info"%> 
<% end %>
