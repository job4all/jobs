
<center><h3>State Details</h3></center>
<hr class="colorgraph">
<table class="table">
  <thead>
    <tr>
      <th>Country</th>
      <th>State Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.country.name %></td>
        <td><%= state.name %></td>
        <td><%= link_to 'Show', state %></td>
        <td><%= link_to 'Edit', edit_state_path(state) %></td>
        <td><%= link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr class="colorgraph">
    

<br>

<%= link_to 'New State', new_state_path , :class => "btn btn-info"%>
