<%= form_for(state) do |f| %>
  <% if state.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(state.errors.count, "error") %> prohibited this state from being saved:</h2>

      <ul>
      <% state.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="jumbotron">
    <div class="panel-body">
        <div class="col-xs-4">
          <%= f.label :country_id %>
          <%= f.collection_select(:country_id, Country.all, :id, :name,{prompt: "Select Country"}, class: "form-control") %>
        </div>
        
        <div class="col-xs-4">
          <%= f.label :name , "Enter State Name" %>
          <%= f.text_field :name , class: "form-control", placeholder: "State Name" %>
        </div>
</div>
  <div class="actions">
    <%= f.submit 'Save' , :class => "btn btn-info"%>
    <%= link_to 'Back', states_path , :class => "btn btn-info"%>
  </div>
</div>

<% end %>
