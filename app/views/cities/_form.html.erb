<%= form_for(city) do |f| %>
  <% if city.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(city.errors.count, "error") %> prohibited this city from being saved:</h2>

      <ul>
      <% city.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="jumbotron">
    <div class="panel-body">

        <div class="col-xs-4">
          <%= f.label :country_id %>
          <%= f.collection_select(:country_id, Country.all, :id, :name,{prompt: "Select Country"}, class: "form-control") %>
        </div>
        <div class="col-xs-4">
          <%= f.label :state_id %>
          <%= f.grouped_collection_select(:state_id, Country.order(:name), :states, :name, :id, :name,{prompt: "Select State"}, class: "form-control") %>
        </div>
        <div class="col-xs-4">
          <%= f.label :name , "Enter City Name" %>
          <%= f.text_field :name , class: "form-control", placeholder: "City Name" %>
        </div>
</div>
  <div class="actions">
    <%= f.submit 'Save' , :class => "btn btn-info"%>
    <%= link_to 'Back', cities_path , :class => "btn btn-info"%>
  </div>
</div>

<% end %>
