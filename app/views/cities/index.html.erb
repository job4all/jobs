
<center><h3>Cities Detail</h3></center>
<hr class="colorgraph">
<table class="table">
  <thead>
    <tr>
      <th>Country</th>
      <th>State</th>
      <th>City Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.country.name %></td>
        <td><%= city.state.name %></td>
        <td><%= city.name %></td>
        <td><%= link_to 'Show', city %></td>
        <td><%= link_to 'Edit', edit_city_path(city) %></td>
        <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr class="colorgraph">
    

<br>

<%= link_to 'Add New City', new_city_path , :class => "btn btn-info"%>
